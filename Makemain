################################## NOTES FOR FUTURE ME ##########################################
# to make running this file easy do the following:
# in terminal type: alias m="make -f Makemain" (this will make an alias in terminal for "m" and it's equal "make -f Makemain")
# make -f Makemain will just let the make program run Makemain instead of looking for Makefile or its variations
# then you can use "m fclean" "m re" etc...
# this way I can use just "m" in terminal instead of make to run this file (output is called "main")
# both .h and .a files should be in root directoy
# ./main to run the tests of main

NAME = libft.a
MAIN = main.c
OUTPUT = main
CC = cc
SRC     = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c \
          ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c \
          ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c \
          ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c ft_strnstr.c \
          ft_atoi.c ft_calloc.c ft_strdup.c \
          ft_substr.c ft_strjoin.c ft_strtrim.c ft_split.c ft_itoa.c \
          ft_strmapi.c ft_striteri.c ft_putchar_fd.c ft_putstr_fd.c \
          ft_putendl_fd.c ft_putnbr_fd.c

CFLAGS = -Wall -Werror -Wextra

OBJ = $(SRC:.c=.o)


all: $(OUTPUT)

$(OUTPUT): $(MAIN) $(NAME)
	$(CC) $(MAIN) -L. -lft -o $(OUTPUT)

$(NAME): $(OBJ)
	ar rcs $(NAME) $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME) $(OUTPUT)

re: fclean all